{
  "name": "@oigroup/babel-plugin-lightscript",
  "version": "2.0.0-alpha.2",
  "description": "Compile LightScript to JavaScript.",
  "main": "lib/index.js",
  "engines": {
    "node": ">=4"
  },
  "scripts": {
    "test": "npm run build && npm run test:only",
    "test:only": "mocha test",
    "test:debug": "node --inspect --debug-brk node_modules/.bin/_mocha test",
    "clean": "rimraf lib",
    "build": "babel -x \".js\",\".lsc\" src --out-dir lib",
    "prepublish": "npm run clean && npm run build"
  },
  "author": "Alex Rattray <rattray.alex@gmail.com> (http://alexrattray.com/)",
  "homepage": "http://lightscript.org/",
  "license": "MIT",
  "dependencies": {
    "@oigroup/babylon-lightscript": "2.0.0-alpha.2",
    "ast-loc-utils": "^1.0.3",
    "babel-types": "^6.24.0"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@oigroup/babel-plugin-lightscript-self-host": "^1.1.0",
    "@oigroup/lightscript-eslint": "^1.1.0",
    "babel-cli": "^6.23.0",
    "babel-core": "^6.24.0",
    "babel-helper-plugin-test-runner": "^6.18.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-env": "^1.3.2",
    "babel-plugin-syntax-jsx": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "eslint": "^3.19.0",
    "eslint-config-babel": "^6.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-flowtype": "^2.20.0",
    "mocha": "^3.2.0",
    "glob": "^7.1.1",
    "yargs": "^7.0.2",
    "rimraf": "^2.6.1"
  }
}
